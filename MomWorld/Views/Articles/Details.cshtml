@model MomWorld.Entities.Article


@{
    Layout = "~/Views/Shared/_MWLayout.cshtml";
    var postedUser = ViewData["PostedUser"] as MomWorld.Models.ApplicationUser;
    var article = ViewData["Article"] as MomWorld.Entities.Article;
    var category = ViewData["Category"] as MomWorld.Entities.Category;
    var comments = ViewData["Comments"] as List<MomWorld.Entities.Comment>;
    var articleLikes = ViewData["ArticleLikes"] as List<MomWorld.Entities.ArticleLike>;
    var isLike = ViewData["IsLike"] as MomWorld.Entities.ArticleLike;
    var tags = ViewData["Tags"] as List<MomWorld.Entities.Tag>;
}

<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->
<head>

    <!-- BASICS -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Mom's World - Bài viết</title>

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<body>
    <!-- modal Report -->
    <div class="modal fade" id="modalReport" tabindex="-1"
         role="dialog" aria-labelledby="modalConfirmLabel" aria-hidden="true"
         style="background: rgba(0, 0, 0, 0.75); top: 0px;">
        <div class="modal-dialog" style="margin-top: 100px;">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        Thoát
                    </button>
                    <img src="@Url.Content("~/Content/images/alert-icon-.png")" style="width:300px;" />
                    <h3 class="modal-title" id="modalConfirmLabel">
                        <strong>Báo xấu</strong>
                    </h3>
                </div>
                <div class="modal-body">

                    <!-- The file upload form used as target for the file upload widget -->
                    <form class="form-horizontal">

                        <div class="form-group">
                            <div class="col-md-12">
                                <textarea class="form-control" rows="4" id="reportContent" placeholder="Nội dung ..."></textarea>
                            </div>

                        </div>

                        <div class="form-group form-footer">
                            <div class="text-center">
                                <button type="submit" class="btn btn-green" id="submitReport">Gửi</button>
                                <button type="reset" data-dismiss="modal" class="btn btn-red">Hủy</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
    <!--modal cảm ơn đã báo xấu bài viết -->
    <div class="modal fade" id="modalThankForReport" tabindex="-1"
         role="dialog" aria-labelledby="modalConfirmLabel" aria-hidden="true"
         style="background: rgba(0, 0, 0, 0.75); top: 0px;">
        <div class="modal-dialog" style="margin-top: 100px;">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        Thoát
                    </button>
                    <img class="img-responsive" src="@Url.Content("~/Content/images/thank-you.jpg")" />
                    <h3 class="modal-title" id="modalConfirmLabel">
                        <strong>Cảm ơn</strong>
                    </h3>
                </div>
                <div class="modal-body">
                    <!-- The file upload form used as target for the file upload widget -->
                    <form class="form-horizontal">
                        <div class="form-group">

                        </div>
                        <div class="form-group form-footer">
                            <div class="text-center">
                                <h3>Cảm ơn bạn đã báo cho chúng tôi bài viết này, chúng tôi sẽ xem xét và xử lí.</h3>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
    <!-- BEGIN BREADCRUMBS -->
    <div id="breadcrumbs" class="breadcrumbs bg-1">
        <div class="container">
            <nav class="navbar-category">
                <div class="container navbar-menu-category">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse"
                                data-target="#myNavbar"
                                style="float: none; text-align: center; margin: 0;">
                            <span class="sr-only">Toggle navigation</span> <img class="img-responsive" alt=""
                                                                                src="@Url.Content("~/Content/images/page-icon/navbar-toggle.png")"
                                                                                style="width: 50px;">
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="pre-pregnancy.html">Mong con</a></li>
                            <li><a href="pregnancy.html">Mang thai</a></li>
                            <li><a href="infant.html">Trẻ sơ sinh</a></li>
                            <li><a href="child-rearing.html">Nuôi dạy trẻ</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="quiz-page.html" data-placement="bottom"
                                   title="Kiểm tra kiến thức">
                                    <i class="fa  fa-university hidden-md hidden-lg"></i> <span class="hidden-sm">Kiểm tra kiến thức</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <ol class="breadcrumb">
                <li>
                    <a href="index.html">
                        <i class="fa fa-home"></i> Trang
                        chủ
                    </a>
                </li>
                <li><a href="pre-pregnancy.html"> Mong con</a></li>
                <li>@category.Name</li>
                <li class="active">@article.Title</li>
            </ol>
            <h2>
                <strong>@article.Title</strong>
            </h2>
        </div>
    </div>
    <!-- END BREADCRUMBS -->
    <!-- post PAGE -->
    <section class="section">
        <div class="container">
            <div class="row">


                @if (User.Identity.Name.Equals("admin") || User.Identity.Name.Equals(postedUser.UserName))
                {
                    <div class="col-md-12 text-right">
                        <a href="@Url.Action("Edit", "Articles", routeValues: new {id = article.Id })" class="btn btn-warning">
                            <i class="fa fa-plus-circle"></i> Sửa bài viết
                        </a> <a href="@Url.Action("Delete", "Articles", routeValues: new { id = article.Id })" class=" btn btn-red">
                            <i class="fa fa-close"></i> Xóa bài viết
                        </a>
                    </div>
                }

            </div>
            <hr class="post-divider">
            <div class="row">


                <!-- post ITEM -->
                <div class="col-sm-9 post-item">
                    <div class="top-box-post">
                        <div class="col-md-2 col-sm-4">
                            <a href="personal-page.html">
                                <img class="img-responsive img-circle avatar-post"
                                     src="@Url.Content("~/Content/images/arnold-avatar.jpg")">
                            </a>
                        </div>

                        <div class="col-md-6 col-sm-4">
                            <h4>
                                <a href="personal-page.html">Khoahn</a>
                            </h4>
                            <ul class="post-details">
                                <li><i class="fa fa-edit color-cyan"></i> 69 Bài viết</li>
                                <li><i class="fa fa-heart color-red"></i> 18 Lượt cảm ơn</li>
                            </ul>
                        </div>
                        <div class="col-md-4 col-sm-4 text-right">
                            <img class="img-responsive img-circle armorial-post"
                                 src="@Url.Content("~/Content/images/armorial/1.png")" data-toggle="tooltip"
                                 data-placement="top" title="Tên danh hiệu">
                        </div>

                    </div>

                    <blockquote>
                        @Html.Raw(article.Content)
                    </blockquote>
                    <ul class="post-details">
                        @if (isLike == null)
                        {
                            <li id="likeSection">
                                <button id="like">
                                    <i class="fa fa-thumbs-up color-cyan"></i>
                                    Cảm ơn
                                </button> <span id="likesNumber" data-value="@articleLikes.Count">(@articleLikes.Count người cảm ơn)</span>
                            </li>
                        }
                        else
                        {

                            @*Sau khi cảm ơn*@

                            <li id="likeSection">
                                <button id="unlike" disabled>
                                    <i class="fa fa-thumbs-up color-red"></i>
                                    Đã cảm ơn
                                </button> <span id="likesNumber" data-value="@articleLikes.Count">(@articleLikes.Count người cảm ơn)</span>
                            </li>}

                        <li>
                            <i class="fa fa-user"></i> <span class="text-muted">
                                Người đăng:
                            </span> @postedUser.UserName
                        </li>
                        <li><i class="fa fa-calendar"></i> @article.PostedDate</li>
                        <li><i class="fa fa-comments"></i> @comments.Count</li>
                        <li>
                            <i class="fa fa-tags"></i>
                            @if (tags != null)
                            {
                                foreach (var tag in tags)
                                {
                                    <span><a href="@Url.Action("Details", "Tags", routeValues: new { id = tag.Id })"> @tag.Name </a></span>
                                }
                            }
                        </li>


                        <li style="float: right">


                            @*<a href="#modalReport"*@
                            <a href="#"
                               data-toggle="modal" id="displayReport">
                                <i class="fa fa-exclamation-circle color-red"></i> Báo xấu
                            </a>
                        </li>
                    </ul>

                    <h2 class="text-underline">Bình luận</h2>
                    <!-- COMMENTS -->
                    <div class="new-comment-container">

                        <textarea class="form-control" placeholder="Nội dung ..." rows="5" id="commentContent"></textarea>
                        <div class="post-toolbar text-right">
                            <button data-toggle="tooltip" data-placement="top" title="" data-original-title="Đăng!" id="submitComment">
                                <i class="fa fa-share"></i>
                            </button>
                            <input type="hidden" id="articleId" value="@article.Id">
                            <input type="hidden" id="userName" value="@User.Identity.Name">
                        </div>

                    </div>




                    <div class="comments" id="commentsDiv">
                        @foreach (var item in comments)
                        {
                            <article class="comment">

                                <aside class="profile-photo">
                                    <a href="#">
                                        <img src="@Url.Content("~/Content/images/clients/random-avatar1.jpg")" class="img-circle">
                                    </a>
                                </aside>

                                <div class="comment-container">

                                    <header>

                                        <div class="author">
                                            <a href="#">@postedUser.UserName</a> đã bình luận
                                            <small>
                                                @item.Date
                                            </small>
                                        </div>

                                    </header>

                                    <div class="comment-content">
                                        <p>@item.Content</p>
                                    </div>
                                    <footer>
                                        @if (User.Identity.Name.Equals(item.UserName))
                                        {
                                            <button id="delete-comment" data-id="@item.Id">
                                                <i class="fa fa-close color-red"></i> Xóa
                                                bình luận
                                            </button>
                                        }
                                    </footer>
                                </div>

                            </article>
                        }
                    </div>

                    <!-- END COMMENTS -->




                </div>
                <!-- END post ITEM -->
                <!-- post SIDEBAR -->
                <div class="col-sm-3 post-sidebar">

                    <!-- CATEGORIES -->
                    <section class="tile color transparent-white">

                        <!-- tile header -->
                        <div class="tile-header color redbrown rounded-top-corners">
                            <h1>
                                <strong>Các mục </strong>nên xem
                            </h1>
                        </div>
                        <!-- /tile header -->
                        <!-- tile body -->
                        <div class="tile-body">

                            <form class="form-horizontal" role="form">
                                <ul class="nav categories sidebar-widget">
                                    <li><a href="post.html#">Sức khỏe sinh sản <em>(26)</em></a></li>
                                    <li class="active">
                                        <a href="post.html#">
                                            40 tuần mang
                                            thai <em>(40)</em>
                                        </a>
                                    </li>
                                    <li><a href="post.html#">Sức khỏe trong thai kỳ <em>(15)</em></a></li>
                                    <li><a href="post.html#">Dinh dưỡng thai kỳ <em>(2)</em></a></li>
                                    <li><a href="post.html#">Kỹ năng làm mẹ <em>(8)</em></a></li>
                                </ul>
                            </form>

                        </div>
                        <!-- /tile body -->

                    </section>
                    <!-- END CATEGORIES -->
                    <!-- RECENT POSTS -->
                    <section class="tile color transparent-white">

                        <!-- tile header -->
                        <div class="tile-header color greensea rounded-top-corners">
                            <h1>
                                Bài viết<strong> nổi bật</strong>
                            </h1>
                        </div>
                        <!-- /tile header -->
                        <!-- tile body -->
                        <div class="tile-body">

                            <form class="form-horizontal" role="form">

                                <ul class="media-list recent-posts sidebar-widget">

                                    <li class="media">
                                        <a class="pull-left"
                                           href="">
                                            <img class="media-object"
                                                 src="@Url.Content("~/Content/images/post/2.jpg")" alt="">
                                        </a>
                                        <div class="media-body">
                                            <h5 class="media-heading">
                                                <a href="">40 Tuần mang thai</a>
                                            </h5>
                                            <p>
                                                Con thân yêu trong bụng mẹ đang phát triển như thế nào
                                                nhỉ?
                                            </p>
                                        </div>
                                    </li>

                                    <li class="media">
                                        <a class="pull-left"
                                           href="">
                                            <img class="media-object"
                                                 src="@Url.Content("~/Content/images/post/4.jpg")" alt="">
                                        </a>
                                        <div class="media-body">
                                            <h5 class="media-heading">
                                                <a href="">Hành trình năm đầu đời</a>
                                            </h5>
                                            <p>
                                                Con đã chào đời trong niềm yêu thương vô bờ bến của
                                                cha mẹ.
                                            </p>
                                        </div>
                                    </li>

                                    <li class="media">
                                        <a class="pull-left"
                                           href="">
                                            <img class="media-object"
                                                 src="@Url.Content("~/Content/images/post/3.jpg")" alt="">
                                        </a>
                                        <div class="media-body">
                                            <h5 class="media-heading">
                                                <a href="">Nuôi dạy con</a>
                                            </h5>
                                            <p>Nếu mang thai, sinh con là một hành trình đáng nhớ</p>
                                        </div>
                                    </li>

                                </ul>

                            </form>


                        </div>
                        <!-- /tile body -->

                    </section>
                    <!-- END RECENT POSTS -->
                    <!-- TAGS -->
                    <section class="tile color transparent-white">
                        <!-- TAGS -->
                        <div class="tile-header color cyan rounded-top-corners">
                            <h1>Các thẻ</h1>
                        </div>
                        <div class="tile-body">
                            <ul class="tags sidebar-widget">
                                <li>
                                    <a href="post.html#">
                                        <i class="fa fa-tags"></i>
                                        Mong con
                                    </a>
                                </li>
                                <li>
                                    <a href="post.html#">
                                        <i class="fa fa-tags"></i>
                                        Mang thai
                                    </a>
                                </li>
                                <li>
                                    <a href="post.html#">
                                        <i class="fa fa-tags"></i> Trẻ
                                        sơ sinh
                                    </a>
                                </li>
                                <li>
                                    <a href="post.html#">
                                        <i class="fa fa-tags"></i>
                                        Nuôi dạy con
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </section>
                    <!-- END TAGS -->
                </div>
                <!-- END post SIDEBAR -->

            </div>
        </div>
    </section>
    <!-- END post PAGE -->


    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#submitComment").click(function () {
                var articleId = $("#articleId").val();
                var username = $("#userName").val();
                var content = $("#commentContent").val();
                var commentsDiv = $("#commentsDiv");
                $.ajax({
                    url: '/Comments/Create',
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify({ comment: { articleId: articleId, username: username, content: content } }),
                    async: true,
                    processData: false,
                    cache: false,
                    success: function (data) {
                        location.reload(true);
                    }
                });
            });

            $("#delete-comment").click(function () {
                var commentId = $(this).attr('data-id');
                $.ajax({
                    url: '/Comments/Delete/' + commentId,
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json; charset=utf-8',
                    //data: JSON.stringify({ comment: { articleId: articleId, username: username, content: content } }),
                    async: true,
                    processData: false,
                    cache: false,
                    success: function (data) {
                        location.reload(true);
                    }
                });
            });

            $('#displayReport').click(function () {
                $('#modalReport').modal('show');
            });

            $("#submitReport").click(function () {
                var articleId = $("#articleId").val();
                var reportContent = $('#reportContent').val();
                alert(reportContent);
                $.ajax({
                    url: '/Articles/Report',
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify({ model: { articleId: articleId, content: reportContent } }),
                    async: true,
                    processData: false,
                    cache: false,
                    success: function (data) {
                        
                    }
                });
            });

            $("#like").click(function () {
                var articleId = $("#articleId").val();
                var likes = parseInt($('#likesNumber').attr('data-value'), 10);
                $.ajax({
                    url: '/Articles/Like',
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify({ articleId: articleId }),
                    async: true,
                    processData: false,
                    cache: false,
                    success: function (data) {
                        //alert(parseInt($('#likesNumber').attr('data-value'), 10));
                        likes = likes + 1;
                        var spanText = "<button id='unlike' disabled> <i class='fa fa-thumbs-up color-red'></i> Đã cảm ơn </button> <span id='likesNumber' data-value='" + likes + "'>(" + likes + " người cảm ơn)</span>";
                        $('#likeSection').html(spanText);
                    },
                    error: function () {
                        alert("Error while excuting 'Like'");
                    }
                });
            });
        });
    </script>



</body>
</html>