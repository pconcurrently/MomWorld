                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify({ comment: { articleId: articleId, username: username, content: content } }),
                    async: true,
                    processData: false,
                    cache: false,
                    success: function (data) {
