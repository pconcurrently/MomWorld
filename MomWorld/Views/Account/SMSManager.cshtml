@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "SMSManager";
}



<head>
    <title>@ViewBag.Title.</title>
</head>
<body class="bg-2">


            <!-- Page content -->
            <div id="content" class="col-md-12">









                <!-- page header -->
                <div class="pageheader">


                    <h2><i class="fa fa-thumb-tack" style="line-height: 48px;padding-left: 1px;"></i> Gửi tin nhắn </h2>


                    <div class="breadcrumbs">
                        <ol class="breadcrumb">
                            <li>You are here</li>
                            <li><a href="index.html">Minimal</a></li>
                            <li><a href="form-elements.html">Forms</a></li>
                            <li class="active">Form Elements</li>
                        </ol>
                    </div>


                </div>
                <!-- /page header -->
                <!-- content main container -->
                <div class="main">




                    <!-- row -->
                    <div class="row">



                        <!-- col 12 -->
                        <div class="col-md-6 col-md-offset-3">



                            <!-- tile -->
                            <section class="tile color transparent-white">



                                <!-- tile header -->
                                <div class="tile-header">
                                    <h1><strong>Manual SMS</strong></h1>
                                    <div class="controls">
                                        <a href="#" class="minimize"><i class="fa fa-chevron-down"></i></a>
                                        <a href="#" class="refresh"><i class="fa fa-refresh"></i></a>
                                        <a href="#" class="remove"><i class="fa fa-times"></i></a>
                                    </div>
                                </div>
                                <!-- /tile header -->
                                <!-- tile body -->
                                <div class="tile-body">

                                    <form class="form-horizontal" role="form">



                                        @*<div class="form-group">
                                            <label for="" class="col-sm-4">Group</label>
                                            <div class="col-sm-8">
                                                <select multiple class="chosen-select chosen-transparent form-control" id="group">
                                                    <option>1</option>
                                                    <option>2</option>
                                                    <option>3</option>
                                                    <option>4</option>
                                                    <option>5</option>
                                                </select>

                                            </div>
                                        </div>*@

                                        <div class="form-group">
                                            <label for="" class="col-sm-4">Số điện thoại</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" id="phoneNumber">
                                            </div>
                                        </div>



                                        <div class="form-group">
                                            <label for="" class="col-sm-4">Nội dung</label>
                                            <div class="col-sm-8">
                                                <textarea rows="4" type="text" class="form-control" id="contentSMS"></textarea>
                                            </div>
                                        </div>





                                        <div class="form-group form-footer footer-white">
                                            <div class="col-sm-offset-4 col-sm-8">
                                                <button type="submit" class="btn btn-greensea">Gửi</button>
                                                <button type="reset" class="btn btn-red">Hủy</button>
                                            </div>
                                        </div>

                                    </form>

                                </div>
                                <!-- /tile body -->




                            </section>
                            <!-- /tile -->




                        </div>
                        <!-- /col 6 -->



                    </div>
                    <!-- /row -->




                </div>
                <!-- /content container -->






            </div>
            <!-- Page content end -->


    

    <script>
        $(function () {
            //chosen select input
            $(".chosen-select").chosen({ disable_search_threshold: 10 });

        })
    </script>

    <script>
        $('.btn.btn-greensea').click(function (e) {
            e.preventDefault();
            var phone = $('#phoneNumber').val();
            var content = $('#contentSMS').val();

            $.ajax({
                url: '/Account/SendSMS',
                dataType: "json",
                type: "POST",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify({ model: { PhoneNumber: phone, Message: content} }),
                async: true,
                processData: false,
                cache: false,
                success: function (data) {
                    window.location.reload(true);
                },
            });
        });

    </script>
</body>

