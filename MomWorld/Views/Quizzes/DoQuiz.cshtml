@model MomWorld.Entities.Quiz

@{
    Layout = "~/Views/Shared/_MWLayout.cshtml";
    ViewBag.Title = "Kiểm tra kiến thức";
    
    var quizId = ViewData["QuizId"] as string;
    var currentUserName = ViewData["UserName"] as string;
}


<head>
    <title>@ViewBag.Title.</title>

    <link rel="stylesheet" href="@Url.Content("~/Content/css/quiz.css")">   
    <link rel="stylesheet" href="@Url.Content("~/Content/css/style.css")">

    <script src="@Url.Content("~/Scripts/angular.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular-ui/angular-ui-router.js")"></script>
    <script src="@Url.Content("~/Scripts/angular-route.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular-resource.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular-ui/ui-bootstrap-tpls.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular-md5.min.js")"></script>
    <script src="https://cdn.firebase.com/js/client/2.2.2/firebase.js"></script>
    <script src="https://cdn.firebase.com/libs/angularfire/1.0.0/angularfire.min.js"></script>



</head>

<body ng-app="quizApp" ng-controller="quizCtrl" ng-init="initQuizDo(@quizId)">
    <!-- Modal thông báo khi đạt huân chương -->
    <div class="modal fade" id="modalCompletedQuizz" tabindex="-1"
         role="dialog" aria-labelledby="modalConfirmLabel" aria-hidden="true"
         style="background: rgba(0, 0, 0, 0.75); top: 0px;">
        <div class="modal-dialog" style="margin-top: 100px;">
            <div class="modal-content text-center">
                <div class="modal-header">
                    <img ng-src="http://localhost:4444/Content/images/badge/{{quizNameTemp}}.png" style="width:100px;" />
                    <h3 class="modal-title" id="modalConfirmLabel">
                        <strong>Xin chúc mừng</strong>
                    </h3>
                </div>
                <div class="modal-body">
                    <!-- The file upload form used as target for the file upload widget -->
                    <form class="form-horizontal">
                        <div class="form-group"><span>Bạn đã hoàn thành tốt bài thi của chúng tôi và đạt được huy hiệu <strong class="color-green">{{quizNameReal}}</strong></span></div>
                        <div class="form-group form-footer">
                            <button data-dismiss="modal" class="btn btn-red">Xem Kết Quả</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
    <!-- Modal thông báo khi Không đạt huân chương -->
    <div class="modal fade" id="modalCompletedQuizzFail" tabindex="-1"
         role="dialog" aria-labelledby="modalConfirmLabel" aria-hidden="true"
         style="background: rgba(0, 0, 0, 0.75); top: 0px;">
        <div class="modal-dialog" style="margin-top: 100px;">
            <div class="modal-content text-center">
                <div class="modal-header">
                    <img class="desaturate" ng-src="http://localhost:4444/Content/images/badge/{{quizNameTemp}}.png" style="width:100px;" />
                    <h3 class="modal-title" id="modalConfirmLabel">
                        <strong>Bạn không hoàn thành</strong>
                    </h3>
                </div>
                <div class="modal-body">
                    <!-- The file upload form used as target for the file upload widget -->
                    <form class="form-horizontal">
                        <div class="form-group"><span>Rất tiếc, bạn chưa hoàn thành bài kiểm tra <strong>{{quizNameReal}}</strong></span></div>
                        <div class="form-group form-footer">
                            <button data-dismiss="modal" class="btn btn-red">Xem kết quả</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
    <!-- BEGIN BREADCRUMBS -->
    <div id="breadcrumbs" class="breadcrumbs bg-1">
        <div class="container">
            <ol class="breadcrumb">
                <li><a href="index.html">Trang chủ</a></li>
                <li class="active">Kiểm tra kiến thức</li>
            </ol>
            <h2>
                <strong>Kiểm tra kiến thức</strong>
            </h2>
        </div>
    </div>
    <!-- END BREADCRUMBS -->
    <!-- QUIZZ -->
    <section class="section">
        <!-- content main container -->
        <div class="container main">
            <!-- row -->
            <div class="row">
                <!-- col 12 -->
                <div class="col-md-12">
                    <div class="col-xs-12 col-sm-3 col-lg-3">
                        <div class="list-group">
                            <a class="list-group-item list-group-item-heading active" href="">
                                Tất
                                cả
                            </a> <a class="list-group-item" href="">
                                <span class="badge pull-right badge-success">0</span> Mong con
                            </a> <a class="list-group-item" href="">
                                <span class="badge pull-right badge-success">0</span> Mang thai
                            </a> <a class="list-group-item" href="">
                                <span class="badge pull-right badge-success">0</span> Trẻ sơ sinh
                            </a> <a class="list-group-item" href="">
                                <span class="badge pull-right badge-warning">1</span> Nuôi dạy trẻ
                            </a>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-9 col-lg-9">
                        <div class="quizz-main">
                            <div ui-view></div>
                        </div>

                    </div>
                </div>
                <!-- /col 12 -->

            </div>
            <!-- /row -->
        </div>
        <!-- /content container -->
    </section>
    <!-- QUIZZ -->

    <script src="@Url.Content("~/App/js/app.js")"></script>
    <script src="@Url.Content("~/App/js/helperService.js")"></script>
    <script src="@Url.Content("~/App/js/quizCtrl.js")"></script>
    <script src="@Url.Content("~/App/js/createCtrl.js")"></script>


</body>
