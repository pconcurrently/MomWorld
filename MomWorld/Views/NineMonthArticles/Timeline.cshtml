
@{
    ViewBag.Title = "Timeline";
    Layout = "~/Views/Shared/_MWLayout.cshtml";
    MomWorld.Models.ApplicationUser currentUser = ViewData["CurrentUser"] as MomWorld.Models.ApplicationUser;
}

<h2>Timeline</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Date")
        </th>
        <th>
            @Html.Label("Content")
        </th>
        <th></th>
    </tr>

@foreach (var item in ViewData["NineMonthArticles"] as List<MomWorld.Entities.NineMonthArticle>)
{
    <tr>
        <td>
            @currentUser.DatePregnacy.Value.AddDays(item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
