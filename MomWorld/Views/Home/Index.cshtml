    <script>
        $('#subscribe').click(function (e) {
            e.preventDefault();
            var email = $('#email').val();
            var phone = $('#phone').val();
            var date = $('#datepicker').val();
            var $subscribeForm = $('#subscribeForm');
            $.ajax({
                url: '/Subscribers/Create',
                dataType: "json",
                type: "POST",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify({ model: { Email: email, PhoneNumber: phone, DatePregnancy: date } }),
                async: true,
                processData: false,
                cache: false,
                success: function (data) {
                    if (data == "Successfull") {
                        $subscribeForm.html("<span style='color:blue'>Cảm ơn bạn đã đăng ký!</span>");
                    }

                    if (data == "PhoneUpdated") {
                        $subscribeForm.html("<span style='color:blue'>Đã cập nhật số điện thoại của bạn!</span>");
                    }

                    if (data == "EmailUpdated") {
                        $subscribeForm.html("<span style='color:blue'>Đã cập nhật địa chỉ email của bạn!</span>");
                    }

                    if (data == "Duplicated") {
                        $subscribeForm.html("<span style='color:blue'>Số điện thoại và email đã được dùng để đăng ký!</span>");

                    }
                },
                error: function () {
                    $subscribeForm.html("<span style='color:red'>Xảy ra lỗi!</span>");
                }
            });
        });

    </script>




